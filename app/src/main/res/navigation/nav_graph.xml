<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_filter">

    <fragment
        android:id="@+id/nav_filter"
        android:name="com.example.yugiohdeckbuilder.ui.FilterFragment">

        <action
            android:id="@+id/action_nav_filter_to_nav_card_list"
            app:destination="@id/nav_card_list" />
        <action
            android:id="@+id/action_nav_filter_to_nav_card_details"
            app:destination="@id/nav_card_detail" />

    </fragment>

    <fragment
        android:id="@+id/nav_card_list"
        android:name="com.example.yugiohdeckbuilder.ui.CardListFragment">

        <action
            android:id="@+id/action_nav_card_list_to_nav_card_detail"
            app:destination="@id/nav_card_detail" />

        <argument
            android:name="name"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="archetype"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="level"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="attribute"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="sort"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="banList"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="cardSet"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="fName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="type"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="race"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="format"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="linkMarker"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="staple"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="language"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_card_detail"
        android:name="com.example.yugiohdeckbuilder.ui.CardDetailsFragment">

        <argument
            android:name="card"
            app:argType="com.example.yugiohdeckbuilder.data.model.response.Card" />
    </fragment>

</navigation>